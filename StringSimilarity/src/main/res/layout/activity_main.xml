<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >


    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:paddingTop="4dp"
        android:hint="@string/find_similar" />
    <TextView
        android:id="@+id/choose_algo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingTop="2dp"
        android:text="@string/choose_algo"
        android:layout_below="@id/search"
        />
    <Spinner
        android:id="@+id/algorithm_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/choose_algo"
        android:layout_alignParentLeft="true"
        android:paddingTop="2dp"
        android:layout_marginTop="2dp"
        />



    <TextView
        android:id="@+id/result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/algorithm_spinner"
        android:hint="Search Results"
        android:paddingTop="@dimen/activity_vertical_margin"
        />
</RelativeLayout>